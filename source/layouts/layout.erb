<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width" />
    
    <!-- turn off cache -->
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Helen Fung | Web designer" %></title>
    <!-- <title><%= current_page.data.title || "Experience Designer & Frontend developer" %></title> -->
    
    <%= stylesheet_link_tag "app" %>

   <%= google_analytics_tag %>
  </head>
  


  <body class="<%= page_classes %>">
    <header class="site__header">
      <ul class="site__nav">
        <li><%= link_to("<span>Works</span>", "/" , :class => 'nav__link') %></li>
        <li><%= link_to("<span>Résumé</span>", "/resume" , :class => 'nav__link') %></li>
      </ul>
    </header>
    <%= yield %>
    
    <%= javascript_include_tag  "all" %>

  </body>
</html>